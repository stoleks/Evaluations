        \settowidth{\largeurTexte}{\enspace#4\enspace}%
        \espaceReponse%
        \lignePointillee[\largeurTexte]%
        \hspace*{-12pt}%
      }% Largeur auto
    }% Largeur manuelle
  }% Plusieurs lignes
}

